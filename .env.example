# Environment Configuration Template
# Copy this to .env and fill in your values
# DO NOT commit .env to git!

# Mist API Configuration
MIST_API_TOKEN=your_mist_api_token_here
SITE_ID=your_mist_site_id_here

# Zendesk Configuration
ZENDESK_SUBDOMAIN=yourcompany
ZENDESK_EMAIL=automation@yourcompany.com
ZENDESK_API_TOKEN=your_zendesk_api_token_here
ZENDESK_GROUP_ID=optional_zendesk_group_id

# Splunk Configuration (Optional)
SPLUNK_HEC_ENDPOINT=https://splunk.yourcompany.com:8088/services/collector
SPLUNK_HEC_TOKEN=your_splunk_hec_token_here

# Logging
LOG_LEVEL=INFO
